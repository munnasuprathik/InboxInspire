# Backend Environment Variables
# Copy this file to .env for local development
# For production, set these in your hosting platform's environment variables

# ============================================
# REQUIRED VARIABLES
# ============================================

# MongoDB Connection String
# Example: mongodb+srv://username:password@cluster.mongodb.net/dbname
MONGO_URL=mongodb://localhost:27017

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# SMTP Configuration (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Admin Secret (for admin dashboard authentication)
# Generate a secure random string
ADMIN_SECRET=your-secure-admin-secret-key

# ============================================
# PRODUCTION REQUIRED
# ============================================

# Frontend URL (REQUIRED in production)
# Set to your Vercel frontend URL
# Example: https://your-app.vercel.app
FRONTEND_URL=https://your-frontend.vercel.app

# ============================================
# OPTIONAL VARIABLES
# ============================================

# Database Name (defaults to 'tend')
DB_NAME=tend

# CORS Origins (comma-separated list)
# If not set, uses FRONTEND_URL
# Example: https://your-app.vercel.app,https://preview.vercel.app
# For development, you can set to '*' (not recommended for production)
CORS_ORIGINS=

# Environment (production/development)
ENVIRONMENT=production

# Tavily API Key (optional - for research features)
TAVILY_API_KEY=

# IMAP Configuration (optional - for email reply processing)
IMAP_HOST=imap.gmail.com
INBOX_EMAIL=your-inbox@gmail.com
INBOX_PASSWORD=your-app-password

# Email Domain (for Message-ID headers)
EMAIL_DOMAIN=

# Clerk Secret Key (if using Clerk for backend auth)
CLERK_SECRET_KEY=
